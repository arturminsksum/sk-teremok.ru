mixin param-item(params)
  each paramName, paramId in params  
    .param-wrap
      .param-item
        .param-name: strong #{paramName}    
        .param-check
          input.input.input-check(type="checkbox",id=paramId)
          label.label.label-check.param-price(for=paramId)
            i.fa.fa-square-o  
            span 150 000
            span  руб.
        .param-price-old
          | Старая цена: 
          span 200 000
          |  руб.
      a(href="#").param-complect Базовая комплектация #{paramName} дома       

mixin char-item(charName,charValue,num)
  .char-item
    img.img.char-icon(src="img/char-"+num+".png", alt="")
    p.char-name #{charName}
    p.char-value: strong #{charValue}


mixin slider-img
